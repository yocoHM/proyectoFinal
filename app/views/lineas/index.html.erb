<%= render 'layouts/header_productos'%> 
<p id="notice"><%= notice %></p>

<h1>Lista de Lineas</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lineas.each do |linea| %>
      <tr>
        <td><%= linea.nombre %></td>
        <td><div class="btn-group">
            <button class="btn btn-default btn-ln dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Abrir', linea %></li>
            <li><%= link_to 'Editar', edit_linea_path(linea) %></li>
            <li><%= link_to 'Borrar', linea, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'layouts/button_add'%>
