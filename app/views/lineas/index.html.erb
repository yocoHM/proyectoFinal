<p id="notice"><%= notice %></p>

<h1>Listing Lineas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lineas.each do |linea| %>
      <tr>
        <td><%= linea.nombre %></td>
        <td><%= link_to 'Show', linea %></td>
        <td><%= link_to 'Edit', edit_linea_path(linea) %></td>
        <td><%= link_to 'Destroy', linea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Linea', new_linea_path %>
