<%= form_for(@linea, html: {class: "form-horizontal"}) do |f| %>
  <% if @linea.errors.any? %>
    <div id="error_explanation">

      <ul>
      <% @linea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :proveedor_id %>

  <div class="form-group">
    <label class="control-label col-sm-2" for="rfc">Nombre:</label>
    <div class="col-sm-10">
      <%= f.text_field :nombre ,id: "nombre",class: "form-control",placeholder: "Introducir Nombre"%>
    </div>
  </div>
  
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-default" type="submit" <%= f.submit %>
      Aceptar</button>
    </div>
  </div>

</form>
<% end %>
