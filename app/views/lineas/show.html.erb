<%= render 'layouts/header_proveedors'%>
<p id="notice"><%= notice %></p>

 <div class="col-lg-6">
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">Linea</h3>
    <div class="btn-group pull-right">
          <% if current_user.admin? %>
            <%= link_to 'Editar', edit_linea_path(@linea), :class => "btn btn-warning", :style=>'color:#FFFFFF;'%>
          <% end %>
        </div>
  </div>
  <div class="panel-body">
<p>
  <strong>Nombre:</strong>
  <%= @linea.nombre %>
</p>
</div>
</div>



<h1>Lista de Productos <% if current_user.admin? %>
  <%= link_to new_producto_path(linea_id: @linea), class: "btn btn-success btn-circle btn-lg" do %>
  <i class="glyphicon glyphicon-plus" style="color:white"></i>
  <% end %> 
<% end %></h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Presentacion</th>
      <th>Especificaciones</th>
      <th>Color</th>
      <th>M2</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @linea.productos.each do |productos| %>
      <tr>
        <td><%= productos.nombre %></td>
        <td><%= productos.presentacion %></td>
        <td><%= productos.especificaciones %></td>
        <td><%= productos.color %></td>
        <td><%= productos.m2 %></td>
        <td>$<%= productos.precio %></td>
        <td><div class="btn-group">
            <button class="btn btn-default btn-ln dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Abrir', productos %></li>
            <% if current_user.admin? %>
              <li><%= link_to 'Editar', edit_producto_path(productos) %></li>
              <li><%= link_to 'Borrar', productos, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            <% end %>
          </ul>
        </div></td>
      </tr>
    <% end %>
      </tbody>
</table>



