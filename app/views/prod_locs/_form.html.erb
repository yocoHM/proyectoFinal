  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="contacto">Producto:</label>
    <div class="col-sm-10">
      <%= f.collection_select(:producto_id, Producto.all, :id, :nombre) %>
    </div>
  </div>

  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-default" type="submit" <%= f.submit %>
      Aceptar</button>
    </div>
  </div>

</form>
<% end %>
