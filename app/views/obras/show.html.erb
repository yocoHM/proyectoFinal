<%= render 'layouts/header_obras'%>
<p id="notice"><%= notice %></p>

 <div class="col-lg-6">
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">Obra</h3>
    <div class="btn-group pull-right">
            <%= link_to 'Editar', edit_obra_path(@obra), :class => "btn btn-warning", :style=>'color:#FFFFFF;'%>
            <%= link_to 'Cotizar', cotiza_obra_path(@obra), :class => "btn btn-default"%>
        </div>
  </div>
  <div class="panel-body">
    
  <strong>Inicio:</strong>
  <%= @obra.inicio %><br>
  <strong>Entrega:</strong>
  <%= @obra.entrega %><br>
  <strong>Empleado a cargo:</strong>
  <%= Empleado.find(@obra.empleado_id).nombre %><br>


  </div>
</div>



<h1>Lista de Localidades <%= link_to new_localidad_path(obra_id: @obra), class: "btn btn-success btn-circle btn-lg" do %>
  <i class="glyphicon glyphicon-plus" style="color:white"></i>
  <% end %> </h1>
<table class = "table table-striped">
	<thead>
    <tr>
      <th>Direccion</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @obra.localidads.each do |localidads| %>
      <tr>
        <td><%= localidads.direccion %></td>
        <td><div class="btn-group">
            <button class="btn btn-default btn-ln dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Abrir', localidads %></li>
            <li><%= link_to 'Editar', edit_localidad_path(localidads) %></li>
          </ul>
        </div></td>
      </tr>
    <% end %>
</tbody>
</table>

