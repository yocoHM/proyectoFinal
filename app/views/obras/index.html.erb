<%= render 'layouts/header_obras'%>

<p id="notice"><%= notice %></p>

<h1>Lista de Obras</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Inicio</th>
      <th>Entrega</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @obras.each do |obra| %>
      <tr>
        <td><%= obra.inicio %></td>
        <td><%= obra.entrega %></td>
        <td><%= obra.cliente.nombre %></td>
        <td><div class="btn-group">
            <button class="btn btn-default btn-ln dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Abrir', obra %></li>
              <li><%= link_to 'Editar', edit_obra_path(obra) %></li>
              <% if current_user.admin? %>
                <li><%= link_to 'Borrar', obra, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              <% end %>
            </ul>
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

