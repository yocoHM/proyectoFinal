<%= form_for(@obra, html: {class: "form-horizontal"}) do |f| %>
  <% if @obra.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@obra.errors.count, "error") %> prohibited this obra from being saved:</h2>

      <ul>
      <% @obra.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :cliente_id %>

  <div class="form-group">
    <label class="control-label col-sm-2" for="direccion">Inicio:</label>
    <div class="col-sm-10">
      <%= f.date_select :inicio ,id: "inicio",class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="direccion">Entrega:</label>
    <div class="col-sm-10">
      <%= f.date_select :entrega ,id: "entrega",class: "form-control"%>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="contacto">Cliente:</label>
    <div class="col-sm-10">
      <%= f.collection_select(:cliente_id, Cliente.all, :id, :nombre) %>
    </div>
  </div>

  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-default" type="submit" <%= f.submit %>
      Aceptar</button>
    </div>
  </div>

<% end %>
