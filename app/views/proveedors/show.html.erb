<%= render 'layouts/header_proveedors'%>  
<p id="notice"><%= notice %></p>
 <div class="col-lg-6">
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">Proveedor</h3>
    <div class="btn-group pull-right">
            <%= link_to 'Editar', edit_proveedor_path(@proveedor), :class => "btn btn-default"%>
        </div>
  </div>
  <div class="panel-body">
    
<p>
  <strong>Nombre:</strong>
  <%= @proveedor.nombre %>
</p>

<p>
  <strong>Correo:</strong>
  <%= @proveedor.correo %>
</p>

<p>
  <strong>Direccion:</strong>
  <%= @proveedor.direccion %>
</p>

<p>
  <strong>Pais:</strong>
  <%= @proveedor.pais %>
</p>

<p>
  <strong>Web:</strong>
  <%= @proveedor.web %>
</p>
</div>
</div>
<table class = "table table-striped">
  <h1>Lista de Lineas</h1>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Proveedor</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @proveedor.lineas.each do |lineas| %>
      <tr>
        <td><%= lineas.nombre %></td>
        <td><%= lineas.proveedor.nombre %></td>
        <td><div class="btn-group">
            <button class="btn btn-default btn-ln dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Abrir', lineas %></li>
            <li><%= link_to 'Editar', edit_linea_path(lineas) %></li>
            <li><%= link_to 'Borrar', lineas, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div></td>
      </tr>
    <% end %>
     </tbody>
   </table>

