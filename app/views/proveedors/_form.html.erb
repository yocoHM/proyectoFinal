<%= form_for(@proveedor, html: {class: "form-horizontal"}) do |f| %>
  <% if @proveedor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@proveedor.errors.count, "error") %> prohibited this proveedor from being saved:</h2>

      <ul>
      <% @proveedor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-sm-2" for="nombre">Nombre:</label>
    <div class="col-sm-10">
      <%= f.text_field :nombre ,id: "nombre",class: "form-control",placeholder: "Introducir Nombre"%>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="rfc">Email:</label>
    <div class="col-sm-10">
      <%= f.text_field :correo ,id: "correo",class: "form-control",placeholder: "Introducir email"%>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="direccion">Dirección:</label>
    <div class="col-sm-10">
      <%= f.text_field :direccion ,id: "direccion",class: "form-control",placeholder: "Introducir Dirección"%>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="telefono">País:</label>
    <div class="col-sm-10">
      <%= f.text_field :pais ,id: "pais",class: "form-control",placeholder: "Introducir País"%>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="contacto">Web:</label>
    <div class="col-sm-10">
      <%= f.text_field :web ,id: "web",class: "form-control",placeholder: "Introducir Página Web"%>
    </div>
  </div> 
  
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-default" type="submit" <%= f.submit %>
      Aceptar</button>
    </div>
  </div>

</form>
<% end %>
