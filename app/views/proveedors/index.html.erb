<%= render 'layouts/header_proveedors'%> 

<p id="notice"><%= notice %></p>

<h1>Lista de Proveedores</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Dirección</th>
      <th>Pais</th>
      <th>Web</th>
      <th>Teléfono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= proveedor.nombre %></td>
        <td><%= proveedor.correo %></td>
        <td><%= proveedor.direccion %></td>
        <td><%= proveedor.pais %></td>
        <td><%= proveedor.web %></td>
        <td><%= proveedor.telefono %></td>
        <td><div class="btn-group">
            <button class="btn btn-default btn-ln dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Abrir', proveedor %></li>
              <% if current_user.admin? %>
                <li><%= link_to 'Editar', edit_proveedor_path(proveedor) %></li>
                <li><%= link_to 'Borrar', proveedor, method: :delete, data: { confirm: 'Are you sure?' } %></li>
              <% end %>
            </ul>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.admin? %>
  <%= render 'layouts/button_add'%>
<% end %>
