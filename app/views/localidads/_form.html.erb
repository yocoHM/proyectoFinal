<%= form_for(@localidad, html: {class: "form-horizontal"}) do |f| %>
  <% if @localidad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@localidad.errors.count, "error") %> prohibited this localidad from being saved:</h2>

      <ul>
      <% @localidad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :obra_id %>

  <div class="form-group">
    <label class="control-label col-sm-2" for="direccion">Dirección:</label>
    <div class="col-sm-10">
      <%= f.text_field :direccion ,id: "direccion",class: "form-control",placeholder: "Introducir Dirección"%>
    </div>
  </div>

  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-default" type="submit" <%= f.submit %>
      Aceptar</button>
    </div>
  </div>

</form>
<% end %>
