<%= render 'layouts/header_clientes'%>

<p id="notice"><%= notice %></p>
 <div class="col-lg-6">
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">Cliente</h3>
    <div class="btn-group pull-right">
            <%= link_to 'Editar', edit_cliente_path(@cliente), :class => "btn btn-default"%>
            
         
        </div>
  </div>
  <div class="panel-body">
    
  <label class="control-label" for="nombre">Nombre:</label>
  <%= @cliente.nombre %><br>
  <label class="control-label" for="nombre">RFC:</label>
<%= @cliente.rfc %><br>
   <label class="control-label" for="nombre">Dirección:</label>
<%= @cliente.direccion %><br>
   <label class="control-label" for="nombre">Teléfono:</label>
 <%= @cliente.telefono %><br>
   <label class="control-label" for="nombre">Contacto:</label>
<%= @cliente.contacto %><br>

  </div>
</div>



<h1>Lista de Obras <%= link_to new_obra_path(cliente_id: @cliente), class: "btn btn-success btn-circle btn-lg" do %>
  <i class="glyphicon glyphicon-plus" style="color:white"></i>
  <% end %> 
</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Inicio</th>
      <th>Entrega</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cliente.obras.each do |obras| %>
      <tr>
        <td><%= obras.inicio %></td>
        <td><%= obras.entrega %></td>
        <td><%= obras.cliente.nombre %></td>
        <td><div class="btn-group">
            <button class="btn btn-default btn-ln dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Abrir', obras %></li>
            <li><%= link_to 'Editar', edit_obra_path(obras) %></li>
            <li><%= link_to 'Borrar', obras, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div></td>
      </tr>
    <% end %>
  
  </tbody>
</table>


