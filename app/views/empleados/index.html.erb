<h1>Listing Empleados</h1>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Rfc</th> 
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Seguro social</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= empleado.nombre %></td>
        <td><%= empleado.rfc %></td>
        <td><%= empleado.direccion %></td>
        <td><%= empleado.telefono %></td>
        <td><%= empleado.seguro_social %></td>
        <td> <div class="btn-group">
            <button class="btn btn-default btn-ln dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              <span class="caret"></span>
            </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Abrir', empleado %></li>
            <li><%= link_to 'Editar', edit_empleado_path(empleado) %></li>
            <li><%= link_to 'Borrar', empleado, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </div>

      </td>
      </tr>
    <% end %>
  </tbody>

</table>

