
<%= render 'layouts/header_empleados'%>

<h1>Ventas</h1>
<%= form_for(empleado_total_path, :method => "get",class: "input-group") do |f|%>
<div class = "col-lg-6">
  <div class="row">
  <div class="col-md-4">
<label>Desde:</label>
 <%= date_select :start_date, :start_date  %>
  </div>
  <div class="col-md-4">
<label>Hasta:</label> 
   <%= date_select :end_date, :end_date %> 
  </div>
  <div class="col-md-4">
<%= f.submit 'Buscar', :class => "btn btn-primary" %>
  </div>
</div>

  <% end %>

<h1>Desde:</h1> <%= @empieza %>
<h1>Hasta:</h1> <%= @termina %>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ventas</th> 
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<% @total.each do |total| %>
  <td><%= total.nombre %></td>
  <td><%= total.ventas %></td>

<% end %>

</table>

